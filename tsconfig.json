{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./src",                                    
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "src/@types"],                                                        
    "outDir": "./dist",    
    "esModuleInterop": true,     
    "forceConsistentCasingInFileNames": true,            
    "strict": true,   
    "skipLibCheck": true                               
  },
  "include": ["src", "types", "src/@types"]
}